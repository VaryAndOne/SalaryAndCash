<?xml version="1.0" encoding="utf-8"?>
<in.srain.cube.views.ptr.PtrFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pull_to_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    cube_ptr:ptr_duration_to_close="300"
    cube_ptr:ptr_duration_to_close_header="2000"
    cube_ptr:ptr_keep_header_when_refresh="true"
    cube_ptr:ptr_pull_to_fresh="false"
    cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
    cube_ptr:ptr_resistance="1.7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/shape_pwd_act"
            android:drawableLeft="@drawable/icon_app"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:paddingRight="15dp"
            android:text="任务"
            android:textColor="#D9AD84"
            android:textStyle="bold"
             />

        <com.vary.salaryandcash.modules.widget.ReDiscreteScrollView
            android:id="@+id/item_picker"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="16dp"
            android:overScrollMode="never" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_person"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:padding="3dp"
            android:src="@color/purple"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_refresh"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="70dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_refresh_black_24dp" />
            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="120dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_more_horiz_black_24dp" />
        </LinearLayout>
    </LinearLayout>
</in.srain.cube.views.ptr.PtrFrameLayout>