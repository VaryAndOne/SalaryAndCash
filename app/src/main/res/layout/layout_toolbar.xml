<android.support.design.widget.AppBarLayout android:id="@+id/app_bar_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:elevation="0dp"
    >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF8080"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <ImageView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                app:srcCompat="@drawable/ic_account_circle_white_24dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="25dp"
                />

            <ImageView
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                app:srcCompat="@drawable/ic_videocam_white_24dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="25dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                app:srcCompat="@drawable/ic_search_white_24dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="25dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                app:srcCompat="@drawable/ic_priority_high_white_24dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="25dp"
                />

        </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>
